extends ./my-account.pug
block detail
    .sugesstion.col-sm-8(style='margin-left: 350px')
        .row
            if(book)
                .card.col-sm-3.mt-3(style='width: 18rem;')
                    img.card-img-top(src= book.image, alt='BIGBANG')
                    .card-body(style="position: relative")
                        h5.card-title= book.name
                        p.card-text(style="margin-bottom: 40px")= book.description
                        a.btn.btn-primary(href=`/users/books/${book._id}/suggestions`, style="position: absolute; bottom: 5px") Suggestions       