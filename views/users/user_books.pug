extends ./my-account.pug
block detail
    .sugesstion.col-sm-8(style='margin-left: 350px')
        .row
            each book in books
                    if(book)
                    .card.col-sm-6.mt-3(style='width: 18rem;')
                        img.card-img-top(src= book.image, alt='BIGBANG')
                        .card-body(style="position: relative")
                            h5.card-title= book.name
                            p.card-text()= `Description: ${book.description}`
                            p.card-text()= `Address: ${book.address}`
                        a.btn.btn-primary(href=`/users/books/${book._id}/suggestions`, style="width: 150px") Suggestions       