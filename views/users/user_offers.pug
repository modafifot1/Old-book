extends ./my-account.pug
block detail
    .offer.col-sm-8(style='margin-left: 350px')
        .row
            each book in books
                    if(book)
                    .card.col-sm-6.mt-3(style='width: 18rem;')
                        img.card-img-top(src= book.image, alt='BIGBANG')
                        .card-body(style="position: relative")
                            h5.card-title= book.name
                            p.card-text(style="margin-bottom: 40px")= book.description
                            a.btn.btn-primary(href='/cart/add/'+ book.id, style="position: absolute; bottom: 5px") Cart
                    
