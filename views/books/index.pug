extends ../layouts/common.pug
block content
    div(style='margin-top: 50px')
        h1 Books
        form(action="/books", method="post")
            .row
                each book in books
                    if(book)
                    .card.col-sm-3.mt-3(style='width: 18rem;')
                        img.card-img-top(src= book.image, alt='BIGBANG')
                        .card-body(style="position: relative")
                            h5.card-title= book.name
                            p.card-text(style="margin-bottom: 40px")= book.description
                            a.btn.btn-primary(href=`/books/${book._id}`, style="position: absolute; bottom: 5px") Offer
                